<div id="{{ div_id | default('file-slideshow') }}" class="{{ div_class | default('file-slideshow') }}">

	<ul>
	
		{% for item in files %}
		
			<li><img class="{{ img_class | default('file-slideshow-image') }}" src="{{ path( 'brs_file_file_image', {'id':item.file_id, 'width':image_width|default(1000), 'height':image_height|default(500), params:'quality:75' }) }}" /></li>
			
		{% endfor %}
	
	</ul>
	
	<a class='slide-back' href="#">&lt</a>
	<a class='slide-next' href="#">&gt</a>
	
</div>

<script language="JavaScript">
	
	var slider = new SlideWidget({
		id: '{{ div_id | default('file-slideshow') }}',
		startSlide: 0,
		speed: 500,
		auto: 3000,
		margin: 20
	});
	
</script>